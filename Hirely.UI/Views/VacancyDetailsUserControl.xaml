<UserControl x:Class="Hirely.UI.Views.VacancyDetailsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Hirely.UI.ViewModels"
             Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Title:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Title}" Margin="0,0,0,5"/>

            <TextBlock Text="Department:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Department}" Margin="0,0,0,5"/>

            <TextBlock Text="Technologies:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Technologies}" Margin="0,0,0,5"/>

            <TextBlock Text="Status:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Status}" Margin="0,0,0,5"/>

            <TextBlock Text="Number of Candidates:" FontWeight="Bold"/>
            <TextBlock Text="{Binding CandidateCount}" Margin="0,0,0,5"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Candidates}" AutoGenerateColumns="False"
          CanUserAddRows="False" IsReadOnly="True"
          MaxHeight="300" Width="320"
          HorizontalAlignment="Left" VerticalAlignment="Top"
          ColumnWidth="*"
          HeadersVisibility="Column"
          GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</UserControl>
