<UserControl x:Class="Hirely.UI.Views.VacanciesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    
    <Grid>
        <DataGrid ItemsSource="{Binding Vacancies, RelativeSource={RelativeSource AncestorType=UserControl}}"
          SelectedItem="{Binding SelectedVacancy, RelativeSource={RelativeSource AncestorType=UserControl}}"
          AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="140"/>
                <DataGridTextColumn Header="Technologies" Binding="{Binding Technologies}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Candidates" Binding="{Binding CandidateCount}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
