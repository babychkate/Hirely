<UserControl x:Class="Hirely.UI.Views.CandidateDetailsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Hirely.UI.ViewModels"
             Height="400" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Фото -->
            <RowDefinition Height="*"/>
            <!-- Дані -->
        </Grid.RowDefinitions>

        <!-- Фото кандидата -->
        <Image Grid.Row="0" Source="{Binding PhotoPath}" Height="150" Width="150" Stretch="Uniform" HorizontalAlignment="Center"/>

        <!-- Список полів -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Full Name:" FontWeight="Bold"/>
            <TextBlock Text="{Binding FullName}" Margin="0,0,0,10"/>

            <TextBlock Text="Status:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Status}" Margin="0,0,0,10"/>

            <TextBlock Text="Phone:" FontWeight="Bold"/>
            <TextBlock Text="{Binding PhoneNumber}" Margin="0,0,0,10"/>

            <TextBlock Text="Level:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Level}" Margin="0,0,0,10"/>

            <TextBlock Text="Resume:" FontWeight="Bold"/>
            <TextBlock Text="{Binding ResumeLink}" TextDecorations="Underline" Foreground="Blue" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</UserControl>
