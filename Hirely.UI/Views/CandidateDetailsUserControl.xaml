<UserControl x:Class="Hirely.UI.Views.CandidateDetailsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="500" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="{Binding PhotoPath}" 
               Height="200" Width="170" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Full Name:" FontWeight="Bold"/>
            <TextBlock Text="{Binding FullName}" Margin="0,0,0,5"/>

            <TextBlock Text="Status:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Status}" Margin="0,0,0,5"/>

            <TextBlock Text="Phone:" FontWeight="Bold"/>
            <TextBlock Text="{Binding PhoneNumber}" Margin="0,0,0,5"/>

            <TextBlock Text="Level:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Level}" Margin="0,0,0,5"/>

            <TextBlock Text="Resume:" FontWeight="Bold"/>
            <TextBlock Text="{Binding ResumeLink}" TextDecorations="Underline" Foreground="Blue" Cursor="Hand"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="View resume" Width="130" Height="30" Background="#5E00FF" Foreground="White" Command="{Binding ViewResumeCommand}" Margin="0,0,10,0"/>
            <Button Content="Plan call" Width="130" Height="30" Background="#5E00FF" Foreground="White" Command="{Binding ScheduleCallCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
