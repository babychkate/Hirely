<Window x:Class="Hirely.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Hirely.UI.ViewModels"
        xmlns:y="clr-namespace:Hirely.UI.Converters"
        Title="Hirely" Height="600" Width="1050">

    <!-- Прив'язка DataContext до ViewModel -->
    <Window.DataContext>
        <vm:RecruitmentViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <y:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Ліва панель навігації -->
        <StackPanel Grid.Column="0" Background="#5E00FF">
            <StackPanel Orientation="Horizontal" Height="60" VerticalAlignment="Top" Margin="0,0,0,10">
                <Image Source="C:\Users\Kateryna\Desktop\Конструювання програмного забезпечення\Hirely\main.jpg" Width="30" Height="30" Margin="10,0">
                    <Image.Clip>
                        <EllipseGeometry Center="15,15" RadiusX="15" RadiusY="15"/>
                    </Image.Clip>
                </Image>
                <TextBlock Text="Hirely" VerticalAlignment="Center" Foreground="White" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Variable Small Semibold"/>
            </StackPanel>

            <!-- Кнопки перемикання табів -->
            <Button Content="Vacancies" Margin="5" Padding="5"
                    Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    HorizontalContentAlignment="Left"
                    Command="{Binding ShowVacanciesCommand}"/>
            <Button Content="Candidates" Margin="5" Padding="5"
                    Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    HorizontalContentAlignment="Left"
                    Command="{Binding ShowCandidatesCommand}"/>
        </StackPanel>

        <!-- Права частина: DataGrid і бічна панель -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва половина: DataGrid + кнопки -->
            <DockPanel Grid.Column="0" LastChildFill="True" Margin="0,0,10,0">

                <!-- Кнопки -->
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,0">
                    <Button Content="Додати вакансію" Width="120" Height="30" Margin="0,0,5,0"
                            Name="BtnAddVacancy" Click="BtnAddVacancy_Click"/>
                    <Button Content="Закрити вакансію" Width="120" Height="30"
                            Command="{Binding CloseVacancyCommand}"/>
                </StackPanel>

                <!-- DataGrid, який показує CurrentItems (Vacancies або Candidates) -->
                <DataGrid ItemsSource="{Binding CurrentItems}" 
                          SelectedItem="{Binding SelectedItem}" 
                          AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>

            <!-- Права половина: бічна панель для деталей -->
            <Border Grid.Column="1" Background="#F0F0F0" Padding="10" CornerRadius="5"
                    Visibility="{Binding IsDetailVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <!-- Можна замінити на UserControl для вакансії або кандидата -->
                    <TextBlock Text="Details will appear here" FontWeight="Bold" FontSize="16"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
